{
  "name": "apple-clone",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "watch:sass": "node-sass sass/index.scss css/style.css --watch",
    "serve": "live-server",
    "start": "npm-run-all --parallel watch:sass serve",
    "compile:sass": "node-sass sass/index.scss css/style.compiled.css",
    "concat:css": "concat css/style.concat.css css/style.compiled.css",
    "prefix:css": "postcss --use autoprefixer -b \"last 10 versions\" css/style.concat.css -o css/style.prefix.css",
    "compress:css": "node-sass --source-map css/style.prefix.css css/style.css --output-style compressed",
    "build:css": "npm-run-all compile:css concat:css prefix:css compress:css"
  },
  "dependencies": {
    "autoprefixer": "^9.7.6",
    "concat": "^1.0.3",
    "live-server": "^1.2.1",
    "node-sass": "^4.14.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.0"
  }
}
